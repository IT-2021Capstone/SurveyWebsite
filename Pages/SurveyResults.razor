@page "/SurveyResults"
@using SurveyWebsite.Data
@using SurveyWebsite.Pages
@using System.Security.Claims
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor _httpContextAccessor
@inject Testingstuff methods
@inherits OwningComponentBase<Testingstuff>
<h3>SurveyResults</h3>



<h4>Survey: @*SurveyTitle*@</h4>
<!--<label>Survey was open through:--> @*Begin and end dates*@<!--</label>-->

@foreach (var q in getresults(5)@*pass in survey id here instead of a 5*@)
{

    @switch (q.Item1)
    {
        case 1:
            //open ended, too many responses to display here, use a different page only for those with priviledges

            <div class="card-block">
                <h4 class="card-title">Question: @q.Item2</h4>
            </div>
            <div class="card-block">
                <h4 class="card-text">Answers are open ended@*link to another page?*@</h4>

            </div>
            break;

        case 2:

            <div class="card-block">
                <h4 class="card-title">Question: @q.Item2</h4>
            </div>

            <div class="card-block">
                <h4 class="card-text">True: @((float)Math.Round(((float)q.Item3[0]/ q.Item3[2])*100))%</h4>
                <h4 class="card-text">False: @((float)Math.Round(((float)q.Item3[1]/ q.Item3[2])*100))%</h4>
                <h4 class="card-text">Total Responses: @q.Item3[2]</h4>
            </div>

            break;

        case 3:
            <div class="card-block">
                <h4 class="card-title">Question: @q.Item2</h4>
            </div>

            <div class="card-block">
                <h4 class="card-text">Total Answers: @q.Item3</h4>
            </div>
            break;
    }


    <br />
    }



